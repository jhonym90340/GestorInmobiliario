{
  "MongoDBSettings": {
    "ConnectionURI": "mongodb://localhost:27017",
    "DatabaseName": "GestorInmobiliarioDB",
    "CollectionNameOwner": "Owners",
    "CollectionNameProperty": "properties",
    "CollectionNamePropertyTrace": "PropertyTraces",
    "CollectionNamePropertyImage": "PropertyImages"
  },
  "ImageSettings": {
    "UploadPath": "wwwroot/images",
    "AllowedExtensions": [ ".jpg", ".jpeg", ".png", ".gif" ],
    "MaxFileSizeMB": 5,
    "BaseUrl": "/images"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}